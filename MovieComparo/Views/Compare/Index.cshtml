@{
    ViewBag.Title = "Movie Price Compare";
    Layout = null;
}
<head>
    <title>@ViewBag.Title</title>
</head>

<body>
    <br />
    <div class="container">
        @* Display a movie search box *@
        <form class="form-inline" role="form">
            <div class="form-group has-feedback">
                <img src="~/Content/Images/Popcorn.png" width="30" height="30" />
                <label class="control-label" for="movieSearch">&nbsp;Movie&nbsp;</label>
                <input type="text" class="form-control" id="movieSearch" style="width: 800px" placeholder="Enter movie name here" />
                <span class="glyphicon glyphicon-search form-control-feedback"></span>
            </div>
        </form>
        <br />
        <label id="message"></label>
        <br />
        <div style="display: inline-block; margin-right: 15px">
            <img id="movieImage" src="" alt="Movie image" style="width: 200px; height: 250px; opacity: 1;">
        </div>
        <div id="pricingContainer" style="display:inline-block">
            <div class="row" style="margin-bottom: 20px;">
                <div id="movieTitle" class="col-sm-10"></div>
                <div id="movieYear" class="col-sm-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-4" style="text-decoration: underline;"><b>Provider</b></div>
                <div class="col-sm-8" style="text-decoration: underline;"><b>Price</b></div>
            </div>
            <div class="row">
                <div id="provider1" class="col-sm-4"></div>
                <div id="price1" class="col-sm-4"></div>
            </div>
            <div class="row">
                <div id="provider2" class="col-sm-4"></div>
                <div id="price2" class="col-sm-4"></div>
            </div>
        </div>

        <br /><br /><br />
    </div>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    
    <script type="text/javascript" src="~/Scripts/Views/Compare/movieCompare.js"></script>
</body>